<Window x:Class="Employment_agency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employment_agency"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" BorderBrush="White" FontFamily="Roboto">
    <Grid Background="#FFE6E6E6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="12*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Label Content="Резюме" Foreground="#3C4247" MouseLeftButtonUp="Click_labelResumes" />
            <Label Content="Вакансии" Foreground="#3C4247" MouseLeftButtonUp="Click_labelVacancies" />
            <Image Source="placeholderuser.png" Height="25" MouseLeftButtonUp="Click_imageProfile"/>
        </StackPanel>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.Row="1">
            
        </Frame>
    </Grid>
</Window>
